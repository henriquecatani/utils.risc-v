{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "/usr/bin/riscv64-linux-gnu-as -g util.s -o util.o && /usr/bin/riscv64-linux-gnu-as -g main.s -o main.o && riscv64-linux-gnu-ld main.o util.o -o program",
            "group": "build"
        },
        {
            "label": "start-qemu",
            "type": "shell",
            "isBackground": true,
            "command": "qemu-riscv64 -g 1234 ./program",
            "dependsOn": "build",
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*",
                    "endsPattern": "^.*"
                }
            }
        }
    ]
}